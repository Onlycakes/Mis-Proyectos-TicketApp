<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <TextView
        android:id="@+id/ticketIdView"
        android:layout_width="46dp"
        android:layout_height="47dp"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ticketTitleView"
        android:layout_width="34dp"
        android:layout_height="47dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/ticketDescriptionView"
        android:layout_width="49dp"
        android:layout_height="47dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/ticketEmployeeView"
        android:layout_width="40dp"
        android:layout_height="49dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/ticketTechnicianView"
        android:layout_width="57dp"
        android:layout_height="49dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/newTechnicianIdView"
        android:layout_width="52dp"
        android:layout_height="48dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/ticketStatusView"
        android:layout_width="38dp"
        android:layout_height="48dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/ticketEstadoView"
        android:layout_width="35dp"
        android:layout_height="45dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/ticketResolutionView"
        android:layout_width="21dp"
        android:layout_height="48dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/seeButton"
        android:layout_width="52dp"
        android:layout_height="73dp"
        android:text="Ver" />

</LinearLayout>